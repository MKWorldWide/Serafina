# AWS Configuration
AWS_REGION=us-east-1
AWS_APP_ID=your_app_id_here
AWS_BRANCH=main

# Amplify Configuration
AMPLIFY_MONOREPO_APP_ROOT=frontend
AMPLIFY_DIFF_DEPLOY=false
AMPLIFY_DIFF_BACKEND=false
AMPLIFY_CLI_SCRIPT_TIMEOUT=300000
AMPLIFY_SKIP_PROMPTS=true

# Serafina Core Configuration
DISCORD_TOKEN=your_discord_bot_token
NODE_ENV=production

# Service Ports
SHADOW_NEXUS_PORT=10000
ATHENA_CORE_PORT=10001
DIVINA_PORT=10002

# Service URLs (update with your Render URLs after deployment)
SHADOW_NEXUS_URL=http://localhost:10000
ATHENACORE_URL=http://localhost:10001
DIVINA_URL=http://localhost:10002

# Node Configuration
NODE_OPTIONS=--max-old-space-size=1024

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration
REDIS_URL=your-redis-cluster.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_auth_token
REDIS_TLS_ENABLED=true
REDIS_CLUSTER_MODE=true

# Security Configuration
ENCRYPTION_KEY=your_aes_256_key
JWT_SECRET=your_jwt_secret
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id
CLOUDFRONT_DOMAIN=your_cloudfront_domain

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/amplify/your-app
CLOUDWATCH_RETENTION_DAYS=30

# DO NOT ADD ACTUAL CREDENTIALS TO THIS FILE
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY= 