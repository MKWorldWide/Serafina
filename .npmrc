# Core Configuration
engine-strict = true
strict-peer-dependencies = false
package-lock = false
shamefully-hoist = true
prefer-offline = true

# Node.js Version
node-version = 20.x

# Performance Optimizations
network-concurrency = 10
child-concurrency = 5
fetch-retries = 2
fetch-retry-mintimeout = 20000
fetch-retry-maxtimeout = 120000

# Security
ignore-scripts = false
ignore-workspace-root-check = true

# Logging
loglevel = "warn"
progress = true
color = "always"

# Cache Settings
cache = ~/.npm
cache-max = 0
cache-min = 10
prefer-offline = true
prefer-online = false

# Network Settings
fetch-retries = 5
fetch-timeout = 60000
fetch-retry-factor = 10
fetch-retry-mintimeout = 10000
fetch-retry-maxtimeout = 300000
