# Copy this file to .env and fill in your actual values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_server_id_here

# Bot Configuration
BOT_PREFIX=!
BOT_ENVIRONMENT=development

# Database Configuration (Optional - for future features)
MONGODB_URI=mongodb://localhost:27017/gamedin
REDIS_URL=redis://localhost:6379

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Feature Flags
ENABLE_XP_SYSTEM=true
ENABLE_AUTO_MODERATION=true
ENABLE_WELCOME_SYSTEM=true
ENABLE_ROLE_MANAGEMENT=true
#
# Lilybear Router Configuration
OWNER_ID=your_discord_user_id_here
GUILD_ID=your_discord_guild_id_here
MCP_URL=http://localhost:3000

# Channel mappings
CHN_ATHENA=channel_id_here
CHN_COUNCIL=channel_id_here
CHN_GITHUB=channel_id_here
CHN_MYST=channel_id_here
CHN_OPS=channel_id_here
