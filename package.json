{
  "name": "serafina-bot",
  "version": "2.0.0",
  "description": "A production-ready Discord bot with modular architecture, slash commands, and advanced features",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20 <25"
  },
  "scripts": {
    "prebuild": "npm install",
    "build": "node render-build.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "register": "tsx src/registry/register.ts",
    "doctor": "tsx scripts/repo-doctor.ts",
    "migrate:db": "tsx scripts/migrate-db.ts",
    "migrate:sqlite-to-pg": "tsx scripts/migrate-sqlite-to-pg.ts",
    "clean": "rimraf dist node_modules package-lock.json coverage",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern '**/__tests__/**'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run -c vitest.e2e.config.ts",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:update": "vitest update",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "prepare": "husky install"
  },
  "keywords": [
    "discord",
    "bot",
    "gaming",
    "community",
    "automation",
    "typescript",
    "discord.js"
  ],
  "author": "NovaSanctum",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "husky": "8.0.3",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "rimraf": "^5.0.5",
    "sql.js": "^1.8.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "1.2.2",
    "@vitest/ui": "1.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "1.2.2",
    "vitest-mock-extended": "1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NovaSanctum/GameDinDiscord.git"
  },
  "bugs": {
    "url": "https://github.com/NovaSanctum/GameDinDiscord/issues"
  },
  "homepage": "https://github.com/NovaSanctum/GameDinDiscord#readme"
}
